@page
@model ProdottoRecenteModel

<h2>Prodotti pi√π recenti</h2>

<form method="get">
    <input type="text" name="q" placeholder="Cerca per nome..." value="@Model.SearchTerm" />
    <button type="submit">Cerca</button>
</form>

@if (Model.Prodotti.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Prezzo</th>
                <th>Categoria</th>
            </tr>
        </thead>
    </table>
    <tbody>
         @foreach (var prodotto in Model.Prodotti)
        {
            <tr>
               
                     <td>@prodotto.Nome</td>
                     <td>@prodotto.Prezzo</td>
                     <td>@prodotto.CategoriaNome</td>
                
            </tr>
            
        }
    </tbody>
}
else
{
    <p>Non sono stati trovati prodotti.</p>
}
