@page
@model AggiungiProdottoModel
@{
    ViewData["Title"] = "Aggiungi Prodotto";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post"> @*con il metodo post quindi stiamo inviando le informazioni*@
        <div class="form-group">
            <label for="Nome">Nome</label>
            <input type="text" class="form-control" name="nome">
        </div>
        <div class="form-group mb-3">
            <label for="Prezzo">Prezzo</label>
            <input type="text" class="form-control" name="prezzo">
        </div>
        <div class="form-group">
            <label for="Dettaglio">Dettaglio</label>

            <input type="text" class="form-control" name="dettaglio">
        </div>
        <div class="form-group">
            <label for="categoria">Categoria</label>
            <select class="form-control" name="categoria">
                <option value="">--- Selezione Categoria ---</option>
                @foreach (var categoria in Model.Categorie)
                {
                    <option value="@categoria">@categoria</option>
                }
            </select>

            <div class="form-group">
                <label for="fornitore">Fornitore</label>
                <select class="form-control" name="fornitore">
                    <option value="">--- Selezione Fornitore ---</option>
                    @foreach (var fornitore in Model.Fornitori)
                    {
                        <option value="@fornitore">@fornitore</option>
                    }
                </select>

            </div>
            <button type="submit" class="btn btn-dark">Aggiungi</button>
    </form>
</div>