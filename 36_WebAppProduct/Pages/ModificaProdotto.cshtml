@page
@model ModificaProdottoModel
@{
    ViewData["Title"] = "Modifica Prodotto";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post">
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" name="nome" value="@Model.Prodotto.Nome" />
        </div>
        <div class="form-group">
            <label for="prezzo">Prezzo</label>
            <input type="text" class="form-control" name="prezzo" value="@Model.Prodotto.Prezzo" />
        </div>
        <div class="form-group">
            <label for="dettaglio">Dettaglio</label>
            <input type="text" class="form-control" name="dettaglio" value="@Model.Prodotto.Dettaglio" />
        </div>
        <div class="form-group">
            <label for="immagine">Quantita</label>
            <input type="text" class="form-control" name="quantita" value="@Model.Prodotto.Quantita" />
        </div>
        <div class="form-group">
            <label for="immagine">immagine</label>
            <input type="text" class="form-control" name="immagine" value="@Model.Prodotto.Immagine" />
        </div>
        <div class="form-group">
              <label for="categoria">Categoria</label>
            <select class="form-control" name="categoria">
            <option value="@Model.Prodotto.Categoria">@Model.Prodotto.Categoria</option>
            @foreach (var categoria in Model.Categorie)
            {
                 <option value="@categoria">@categoria</option>
            }
            </select>
            <div class="form-group">
            <label for="dataInserimento">Data Inserimento prodotto</label>
            <input type="text" class="form-control" name="dataInserimento" value="@Model.Prodotto.DataInserimento" />
        </div>
        </div>
        <button type="submit" class="btn btn-dark">Modifica</button>
    </form>
</div>